#!/usr/bin/env bash

set -euo pipefail

# Docker needs to be started from the project root
# to mount the scripts
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"
pushd "$SCRIPT_DIR/.."

docker build . \
  -t "${DOCKER_REGISTRY:-docker.io}"/"${DOCKER_USER}"/"${DOCKER_REPO}":"$DOCKER_TAG"

popd
